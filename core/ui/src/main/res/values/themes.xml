<resources>
    <style name="Theme.StukaloKyrylo" parent="Theme.AppCompat.DayNight.NoActionBar">

    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_animated</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>
        <item name="postSplashScreenTheme">@style/Theme.StukaloKyrylo</item>
    </style>

    <style name="TextRegular">
        <item name="android:fontFamily">@font/inter_400</item>
    </style>

    <style name="TextMedium">
        <item name="android:fontFamily">@font/inter_500</item>
    </style>

    <style name="TextBold">
        <item name="android:fontFamily">@font/inter_700</item>
    </style>

    <style name="TextRegular.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextMedium.Size12">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextMedium.Size14">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextMedium.Size14.Red">
        <item name="android:textColor">@color/red_900</item>
    </style>

    <style name="TextMedium.Size14.Primary">
        <item name="android:textColor">@color/primary</item>
    </style>

</resources>