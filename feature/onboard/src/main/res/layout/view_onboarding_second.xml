<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/primary_light">

    <ImageView
        android:id="@+id/onboardingImage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="16dp"
        android:paddingStart="70dp"
        app:srcCompat="@drawable/img_asteroid_hits_earth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            style="@style/TextBold.Size16.LightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stay_informed" />

        <TextView
            style="@style/TextRegular.Size12.LightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:text="@string/onboarding_second" />

    </LinearLayout>



</LinearLayout>