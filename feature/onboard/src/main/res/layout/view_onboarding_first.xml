<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:background="@color/primary_light">

    <LinearLayout
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="bottom">
        <LinearLayout
            android:id="@+id/onboardingImage"
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="bottom">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/img_asteroid" />
        <ImageView
            android:layout_width="512dp"
            android:layout_height="512dp"
            android:rotation="-42"
            android:layout_marginStart="16dp"
            app:srcCompat="@drawable/img_ceres" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            style="@style/TextBold.Size16.LightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/visualize_size_and_distance" />

        <TextView
            style="@style/TextRegular.Size12.LightGray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="32dp"
            android:layout_marginHorizontal="16dp"
            android:gravity="center"
            android:text="@string/onboarding_first" />

    </LinearLayout>



</LinearLayout>